<div class="container-fluid">
  <div class="row-fluid">

    <form class="form-horizontal" enctype="multipart/form-data" action="/denuncias/new" method="post">

<fieldset>

<!-- Form Name -->
<legend>Nueva denuncia</legend>

<!-- Multiple Radios -->

<div class="form-group">

  <label class="col-md-4 control-label" for="radios">Visibilidad Denunciante</label>

  <div class="col-md-4">

  <div class="radio">

    <label for="radios-0">

      <input type="radio" name="radios" id="radios-0" value="1" checked="checked">
      Público
    </label>

    </div>

  <div class="radio">

    <label for="radios-1">

      <input type="radio" name="radios" id="radios-1" value="2">

      Anónimo

    </label>

    </div>

  </div>

</div>

<!-- Text input-->

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Asunto</label>
  <div class="col-md-4">
  <input id="textinput" name="asunto" type="text" placeholder="placeholder" class="form-control input-md">

  </div>

</div>

<!-- Textarea -->

<div class="form-group">

  <label class="col-md-4 control-label" for="textarea">Descripción</label>
  <div class="col-md-4">
    <textarea class="form-control" id="textarea" name="descripcion">default text</textarea>

  </div>

</div>

<!-- Textarea -->

<div class="form-group">

  <label class="col-md-4 control-label" for="textarea">Descripción extensa</label>
  <div class="col-md-4">
    <textarea class="form-control" id="textarea" name="descripcionExtensa">default text</textarea>

  </div>

</div>
<div class="form-group">
        <label class="col-md-4 control-label" for="textarea">Subir imagen</label>
        <div class="col-md-4">
            <!-- image-preview-filename input [CUT FROM HERE]-->
            <div class="input-group image-preview">
                <input type="text" class="form-control image-preview-filename" disabled="disabled"> <!-- don't give a name === doesn't send on POST/GET -->
                <span class="input-group-btn">
                    <!-- image-preview-clear button -->
                    <button type="button" class="btn btn-default image-preview-clear" style="display:none;">
                        <span class="glyphicon glyphicon-remove"></span> Clear
                    </button>
                    <!-- image-preview-input -->
                    <div class="btn btn-default image-preview-input">
                        <span class="glyphicon glyphicon-folder-open"></span>
                        <span class="image-preview-input-title">Browse</span>
                        <input type="file" accept="image/png, image/jpeg, image/gif" name="file">
                    </div>
                </span>
            </div><!-- /input-group image-preview [TO HERE]-->
        </div>
</div>

<!-- Button -->

<div class="form-group">

  <label class="col-md-4 control-label" for="singlebutton">Denunciar</label>
  <div class="col-md-4">
    <button id="singlebutton" name="denunciar-button" class="btn btn-primary">Button</button>

  </div>

</div>

</fieldset>

</form>

  </div><!-- /.row -->


</div><!-- /.container -->
